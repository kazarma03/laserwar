            <Border BorderBrush="#FF2C2C2C" Background="#FF2C2C2C" Name="border" >
                <ContentPresenter RecognizesAccessKey="True" Margin="{TemplateBinding Padding}"></ContentPresenter>
            </Border>
            <ControlTemplate.Triggers>
                -->
        <!--Наведение мыши-->
        <!--
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="Blue"></Setter>
                </Trigger>
              
                -->
        <!--<DataTrigger Binding="{Binding MainButtonkey, Mode=OneWay}" Value="d">
                    <Setter TargetName="border" Property="Background" Value="Blue"></Setter>
                </DataTrigger>-->
        <!--Нажатие мыши-->
        <!--
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="border" Property="Background" Value="#FF5656FF"></Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>-->
        <Style x:Key="MainButton" TargetType="Button">
            <Style.Setters>
                <Setter Property="BorderBrush" Value="#FF2C2C2C"></Setter>
                <Setter Property="Background" Value="#FF2C2C2C"></Setter>
            </Style.Setters>
            <Style.Triggers>
                <!--Наведение мыши-->
                <!--
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="Blue"></Setter>
                    </Trigger>-->
            </Style.Triggers>
        </Style>
        <Style x:Key="AccessoryButton" TargetType="Button">
            <Style.Setters>
                <Setter Property="BorderBrush" Value="Blue"></Setter>
                <Setter Property="Background" Value="Blue"></Setter>
                <Setter Property="Foreground" Value="White"></Setter>
            </Style.Setters>
        </Style>
        <Style x:Key="LabelMain" TargetType="Label">
            <Style.Setters>
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="Foreground" Value="Black"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
                <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            </Style.Setters>
        </Style>
        <Style x:Key="LabelSub" TargetType="Label">
            <Style.Setters>
                <Setter Property="FontSize" Value="13"></Setter>
                <Setter Property="Foreground" Value="#FF2C2C2C"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
            </Style.Setters>
        </Style>
        <Style x:Key="dataGrid" TargetType="DataGrid">
            <Setter Property="ColumnHeaderStyle" Value="{DynamicResource res}"></Setter>
        </Style>
        <Style x:Key="res" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="White"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Height" Value="70"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" ></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--Grid Главное меню -->
        <Grid Name="GridMainMenu" Grid.Column="0" Background="#FF2C2C2C">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="225"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition MinHeight="225"></RowDefinition>
            </Grid.RowDefinitions>
            <!--Кнопки главного меню  -->
            <Button x:Name="download" Style="{StaticResource MainButton}" Grid.Row="1"  Click="download_Click">
                <Image Source="resources/download.png" Height="20" Width="20"></Image>
            </Button>
            <Button x:Name="sounds" Style="{StaticResource MainButton}" Grid.Row="2" Click="sounds_Click">
                <Image Source="resources/sounds.png" Height="20" Width="20"></Image>
            </Button>
            <Button x:Name="games" Style="{StaticResource MainButton}" Grid.Row="3" Click="games_Click">
                <Image Source="resources/games.png" Height="20" Width="20"></Image>
            </Button>
        </Grid>
        <!--**************-->
        <!--Grid Форма загрузки -->
        <Grid Name="GridDownload" Grid.Column="2"  Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="400"></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition Width="300"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="1" Style="{StaticResource LabelMain}">ЗАГРУЗКА</Label>
            <Label Grid.Row="2" Style="{StaticResource LabelSub}"  HorizontalAlignment="Left" Foreground="#FF2C2C2C">Адрес файла</Label>
            <TextBox Grid.Row="3" Name="TextBoxAddress" Height="20" Width="350"  BorderBrush="Blue" SelectionBrush="White" BorderThickness="0,0,0,2" Background="White" HorizontalAlignment="Left" Margin="5,0,0,10" Text="https://laserwar.com/testtask/get?dataType=Json" Foreground="#FF2C2C2C"></TextBox>
            <Button Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" x:Name="buttonDownload" Style="{StaticResource AccessoryButton}" Content="ЗАГРУЗИТЬ" FontSize="13" FontWeight="Bold" Height="40" Click="buttonDownload_Click" Margin="0,5,0,0" Width="150"/>
            <Label Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" Name="LabelStateDownload" Style="{StaticResource LabelSub}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0" Visibility="Visible"></Label>
            <TextBox Grid.Row="5" Grid.ColumnSpan="3" Name="TextBoxJson"  BorderBrush="Blue" SelectionBrush="White" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" BorderThickness="0" Background="White" Visibility="Hidden" Foreground="#FF2C2C2C"/>
        </Grid>
        <!--**************-->
        <!--Grid Форма Звука -->
        <Grid Name="GridSound" Grid.Column="2" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="1" Style="{StaticResource LabelMain}">ЗВУКИ</Label>
            <DataGrid x:Name="dataGridSounds" Style="{DynamicResource dataGrid}" Grid.Row="2" Margin="5,0,0,0" AutoGenerateColumns="False" BorderBrush="{x:Null}" Foreground="#FF2C2C2C" Background="White" AlternatingRowBackground="White"  BorderThickness="0" RowHeight="20" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#FFC5C5C5" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserSortColumns="False" SelectionChanged="dataGridSounds_SelectionChanged" HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden">
                <DataGrid.Columns >
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Имя файла"  MinWidth="200" HeaderStringFormat="" IsReadOnly="True"/>
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Размер файла" MinWidth="150" IsReadOnly="True" CanUserResize="False"/>
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Загрузка файла" MinWidth="220"/>
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Воспроизвести" MinWidth="220"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
        <!--**************-->
        <!--Grid Форма Игра -->
        <Grid Name="GridGames" Grid.Column="2" Visibility="Hidden">
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
        </Grid>
        <!--Grid Форма Детализация игры -->
        <Grid Name="GridGamesDetail" Grid.Column="2" Visibility="Hidden">
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
        </Grid>
    </Grid>
</Window>